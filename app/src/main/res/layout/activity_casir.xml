<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/p10">


    <TextView
        android:id="@+id/id_txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/p20"
        android:layout_marginTop="@dimen/p20"
        android:text="Selamat Datang, Users"
        android:textSize="@dimen/p20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_txt_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name " />

    <EditText
        android:id="@+id/id_edt_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tatang Roswandi Ganda Wijaya" />

    <TextView
        android:id="@+id/id_txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username Atau Email " />

    <EditText
        android:id="@+id/id_edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tatang@gmail.com" />

    <TextView
        android:id="@+id/id_txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password " />

    <EditText
        android:id="@+id/id_edt_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tatang.it.name" />

    <Button
        android:id="@+id/id_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p20"
        android:text="Simpan" />


</LinearLayout>



