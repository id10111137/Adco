<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/p10">


    <ImageView
        android:id="@+id/id_img_result"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="120dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:id="@+id/id_img_harga"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="@dimen/p10"
        android:src="@drawable/ic_printer"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/id_header_Result"
        android:layout_width="wrap_content"
        android:textColor="@color/colorRed"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Header Text Product" />

    <TextView
        android:id="@+id/id_jenis_bakso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:text="Jenis Rasa : Bakso Cingcang" />

    <TextView
        android:id="@+id/id_sisa_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:text="Sisa Stock : 20 Biji" />

</LinearLayout>